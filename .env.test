# Test Environment Configuration
# This file documents recommended environment variables for testing
# 
# IMPORTANT: This file is for documentation only and is NOT auto-loaded
# Use fixture helpers in test/fixtures/env.ts and test/helpers/config.ts
# for consistent test environments across the test suite

# ============================================================================
# CORE CONFIGURATION FOR TESTING
# ============================================================================

# KV Namespaces (mocked in tests)
REDIRECT_KV=test_kv_namespace
ANALYTICS_KV=test_analytics_kv_namespace

# Domain Security (comma-separated list)
# Used for testing domain validation and allowlist functionality
ALLOWED_DOMAINS=example.com,test.com,localhost

# Feature Flags
ENABLE_TRACKING=false
DEFAULT_REDIRECT_URL=https://finejapanvietnam.com

# ============================================================================
# ANALYTICS CONFIGURATION FOR TESTING
# ============================================================================

# Analytics providers (comma-separated)
# Valid values: ga4, mixpanel (can be combined)
ANALYTICS_PROVIDERS=ga4,mixpanel

# Analytics timeout in milliseconds (default: "2000")
# Maximum time to wait for analytics before redirecting
ANALYTICS_TIMEOUT_MS=2000

# ============================================================================
# GOOGLE ANALYTICS 4 (GA4) - NON-PRODUCTION TEST VALUES
# ============================================================================

# GA4 Measurement ID (format: G-XXXXXXXXXX)
# This is a test value - DO NOT use in production
GA4_MEASUREMENT_ID=G-TEST123456

# GA4 API Secret
# This is a test value - DO NOT use in production
GA4_API_SECRET=test_secret_12345

# ============================================================================
# MIXPANEL - NON-PRODUCTION TEST VALUES
# ============================================================================

# Mixpanel Token
# This is a test value - DO NOT use in production
MIXPANEL_TOKEN=test_mixpanel_token_abc123

